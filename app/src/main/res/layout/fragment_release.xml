<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/release_tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            fab:tabTextColor="@color/black"
            ></com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/release_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </androidx.viewpager2.widget.ViewPager2>


    </LinearLayout>
    
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/release_FAM"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        fab:menu_icon="@mipmap/release"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_colorNormal="@color/transparent"
        fab:menu_colorPressed="@color/transparent"
        android:layout_marginBottom="20dp"
        >
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fab:fab_showShadow="true"

            fab:fab_shadowColor="#66000000"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_colorPressed="@color/grey_transparent"

            ></com.github.clans.fab.FloatingActionButton>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fab:fab_showShadow="true"
            fab:fab_shadowColor="#66000000"
            android:scaleType="centerInside"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_colorPressed="@color/grey_transparent"
            ></com.github.clans.fab.FloatingActionButton>
    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>
