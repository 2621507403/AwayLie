<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:scaleType="centerInside"
        android:src="@drawable/verifydetail"></ImageView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/grey_transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="标题："
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                ></TextView>
            <TextView
                android:id="@+id/release_verify_detail_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="标题内容"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="发布者："
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/black"
                ></TextView>
            <TextView
                android:id="@+id/release_verify_detail_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="名称"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="关键词："
                android:textStyle="normal"
                android:textSize="10sp"
                android:textColor="@color/black"
                ></TextView>
            <TextView
                android:id="@+id/release_verify_detail_keyword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="关键词"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="编辑于："
                android:textStyle="italic"
                android:textSize="10sp"
                android:textColor="@color/black"
                ></TextView>
            <TextView
                android:id="@+id/release_verify_detail_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:text="2023年xx月xx日"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/black"
                ></TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/release_verify_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="哈哈哈哈哈哈"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                ></TextView>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/blue_transparent"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/release_verify_detail_support"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@color/blue"
                    ></ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:text="点赞"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <ImageButton
                    android:id="@+id/release_verify_detail_verify"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@color/blue"
                    ></ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:text="证明"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    ></TextView>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</LinearLayout>